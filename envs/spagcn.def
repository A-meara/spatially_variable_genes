Bootstrap: localimage
From: python_base_ob.sif

%post
    # Install system dependencies
    apt-get update && apt-get install -y \
        git \
        libhdf5-dev \
        cmake

    # Clone SpaGCN
    git clone https://github.com/jianhuupenn/SpaGCN.git /opt/SpaGCN

    # Fix deprecated .A attribute (replaced with .toarray() in modern scipy)
    find /opt/SpaGCN/SpaGCN_package/SpaGCN/ -name "*.py" -exec sed -i 's/\.A\>/\.toarray()/g' {} \;

    # Install Python packages (including torch for SpaGCN)
    pip install --no-cache-dir --break-system-packages \
        torch \
        "numpy<2.0" \
        scipy \
        /opt/SpaGCN/SpaGCN_package

    # Clean up
    apt-get clean
    rm -rf /var/lib/apt/lists/*

%labels
    Author "OpenProblems/Aidan Meara"
    Version "1.0.0"
    Description "SpaGCN method for spatially variable gene detection"
    BaseImage "python_base_ob.sif (Python 3.12)"
